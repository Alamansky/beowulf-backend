doctype html
html
    head
        title Beowulf Beard Co

        style.
            html,
            body {
            padding: 0;
            margin: 0;
            }

            p,
            span,
            b,
            em,
            abbr,
            div,
            h1,
            h2,
            h3,
            h4,
            h5,
            a {
            font-family: Arial, Helvetica, sans-serif;
            line-height: 1.4;
            margin: 0;
            box-sizing: border-box;
            }

            h1,
            h2,
            h3,
            h4,
            h5 {
            font-family: Helvetica, Arial, sans-serif;
            }

            p,
            span,
            b,
            em,
            abbr,
            div {
            font-size: 14px;
            color: #222;
            }

            a {
            text-decoration: none;
            cursor: pointer;
            padding: 15px;
            }

            img {
            vertical-align: sub;
            }

            table {
            margin: 0;
            padding: 0;
            }
            table.table {
            min-width: 50%;
            max-width: 2000px;
            margin: 0 auto;
            background-color: white;
            }
            table td {
            margin: 0 auto;
            }

            td {
                padding: 30px;
            }

            button {
                color: white !important;
                background-color: #3a3a3a;
            }

            .center {
                text-align: center;
            }
            .right {
                text-align: right;
            }

            .left {
                text-align: left;
            }

            .util--divider {
                border-right: 1px solid #e1e1e1;
                width: 50%;
            }

            .banner {
                background-color: #3a3a3a;
                color: white;
                text-align: center;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                padding: 50px;
            }

            .util--extraPadding {
                padding-right: 60px;
            }

            .u__marginB--7 {
                margin-bottom: 7px;
            }

            .spacer {
                padding: 15px;
            }

            .text {
                max-width: 600px;
                margin: 0 auto;
            }

            .link--dark {
                color: white !important;
                background-color: #3a3a3a;
            }

    body
        div(style={'background-color': '#e1e1e1'}).wrapper
            block content